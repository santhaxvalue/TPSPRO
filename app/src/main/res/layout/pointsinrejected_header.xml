<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reward_history_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/layout_topView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <include layout="@layout/header_pointsinrejected" />

    </android.support.v7.widget.Toolbar>

    <com.panelManagement.widgets.TextViewPlusBold
        android:id="@+id/head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_topView"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:padding="@dimen/dp4"
        android:text="@string/tv_points_in_reject_title"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_survey1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head1"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />

    <com.panelManagement.widgets.TextViewPlusBold
        android:id="@+id/empty_text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="@string/survey_not_found"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pirCardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp5"
        app:elevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/titleLayout1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp">

                <ImageView
                    android:id="@+id/tickImg1"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tick_icon1" />

                <TextView
                    android:id="@+id/pirTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_toRightOf="@id/tickImg1"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titleLayout1"
                android:layout_marginTop="@dimen/dp10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view11"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/pirc11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toRightOf="@id/view11"
                        android:text="content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16" />

                    <View
                        android:id="@+id/view21"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_below="@id/pirc11"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/pirc21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pirc11"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_toRightOf="@id/view21"
                        android:text="content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16" />


                    <View
                        android:id="@+id/view31"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_below="@id/pirc21"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/pirc31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pirc21"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_toRightOf="@id/view31"
                        android:text="content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16" />

                    <View
                        android:id="@+id/view41"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_below="@id/pirc31"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/pirc41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pirc31"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_toRightOf="@id/view41"
                        android:text="content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@+id/pirc51"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pirc41"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14" />

                </RelativeLayout>

            </ScrollView>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>