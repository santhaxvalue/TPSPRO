<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/result_layout"
    android:layout_marginStart="@dimen/dp10"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginTop="@dimen/dp40"
    android:layout_marginEnd="@dimen/dp10"
    android:layout_marginBottom="@dimen/dp20"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/optionText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:maxWidth="140dp"
        android:text="Option Name"
        android:textColor="@color/color_979797"
        android:textSize="@dimen/sp16" />

    <RelativeLayout
        android:id="@+id/percentage_lyout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/optionText"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10">

        <TextView
            android:id="@+id/option_percent"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:maxLines="1"
            android:background="@drawable/background_percentage"
            android:textColor="@color/black"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/option_percent_front"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp2"
            android:gravity="left|center"
            android:maxLines="1"
            android:layout_toRightOf="@id/option_percent"
            android:textColor="@color/black"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>


</RelativeLayout>