<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sc_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:padding="15dp">

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/tv_mobileVerificationtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/txt_mobile_verification"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/tv_mobileVerificationnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:padding="5dip"
                android:text="@string/txt_mobile_number_verify"
                android:textColor="@color/gray_dark"
                android:textSize="16sp" />

            <com.panelManagement.widgets.TextViewPlusBold
                android:id="@+id/tv_mobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/txt_mobilenumber"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="6">

                <com.panelManagement.widgets.TextViewPlusBold
                    android:id="@+id/tv_isdCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edt_mobilenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:minWidth="100dp"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14.0sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_verify"
                android:layout_width="@dimen/alert_dialog_height"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/aqua_dark"
                android:text="@string/btn_verify_new"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_verify_resend_otp"
                android:layout_width="@dimen/alert_dialog_height"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/aqua_dark"
                android:text="@string/btn_verify_new"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/infolink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/txt_info_new"
                android:textColor="@color/aqua_dark"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                android:visibility="gone"/>



            <com.panelManagement.widgets.TextViewPlusBold
                android:id="@+id/tv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/txt_pin_new"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:inputType="number"
                android:minWidth="60dp"
                android:textColor="@color/black"
                android:textSize="14.0sp" />

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/tv_pinSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/txt_msg_pinsent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/txt_donot_enter_code"
                android:textColor="@color/gray_dark"
                android:textSize="12sp" />

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/tv_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/resend_otp_new"
                android:textColor="@color/aqua_dark"
                android:textSize="@dimen/sp14"
                android:textStyle="bold"
                android:visibility="gone"/>
           <!-- android:textColor="@color/blue"
            android:textSize="16sp"-->

            <Button
                android:id="@+id/btn_new_submit"
                android:layout_width="@dimen/alert_dialog_height"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/aqua_dark"
                android:text="@string/txt_submit_new"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <!--<com.panelManagement.widgets.ButtonPlus
                android:id="@+id/btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_red_press"
                android:text="@string/btn_verify"
                android:textColor="@color/white" />-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>