<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp50"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/txt_mandatoryid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginStart="@dimen/dp8"
                android:text="@string/txt_mandatory"
                android:textColor="@color/red"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ic_linear_backfields_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

    <com.panelManagement.widgets.ButtonPlus
        android:id="@+id/next"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp48"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/btn_red_press"
        android:gravity="center"
        android:text="@string/btn_next"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

</RelativeLayout>