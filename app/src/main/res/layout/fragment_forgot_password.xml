<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp12"
    app:cardElevation="@dimen/dp2"
    app:cardUseCompatPadding="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forgot_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_close_forgot"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginStart="@dimen/dp12"
                android:text="@string/forgotPassword_title"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/sp24" />

            <EditText
                android:id="@+id/edt_forgot_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_head"
                android:layout_margin="@dimen/dp8"
                android:background="@drawable/edtbox_rounded_corner"
                android:cursorVisible="true"
                android:ellipsize="end"
                android:hint="@string/txt_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp8"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/iv_close_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/press_again_close"
                android:padding="@dimen/dp8"
                android:src="@drawable/ic_cross" />

            <ImageButton
                android:id="@+id/btn_send_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_forgot_email"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp24"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/transparent"
                android:contentDescription="@string/btn_send"
                android:gravity="center"
                android:padding="@dimen/dp8"
                android:src="@drawable/message" />

        </RelativeLayout>

    </ScrollView>

</android.support.v7.widget.CardView>