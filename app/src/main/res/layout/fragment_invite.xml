<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invite_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp60"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:background="@color/gray_light"
    app:cardCornerRadius="@dimen/dp2"
    app:cardElevation="@dimen/dp2"
    tools:context="com.panelManagement.fragment.InviteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <com.panelManagement.widgets.TextViewPlusBold
            android:id="@+id/tv_invite_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:layout_marginTop="@dimen/dp16"
            android:gravity="center"
            android:padding="@dimen/dp4"
            android:text="@string/refer_2_more"
            android:textColor="@color/black"
            android:textSize="@dimen/_24sdp" />

        <com.panelManagement.widgets.TextViewPlusBold
            android:id="@+id/tv_invite_sub_head"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invite_head"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:layout_marginTop="@dimen/dp16"
            android:gravity="center"
            android:text="@string/and_each_time_500_referral_points"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/iv_refer"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_refer_120dp" />


        <com.panelManagement.widgets.TextViewPlusBold
            android:id="@+id/tv_invite_paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/dp4"
            android:text="@string/friends_make_life_better" />

        <LinearLayout
            android:id="@+id/ll_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invite_paragraph"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp4"
            android:layout_marginTop="@dimen/dp4"
            android:orientation="horizontal">


            <com.panelManagement.widgets.TextViewPlusBold
                android:id="@+id/tv_invite_link_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4"
                android:text="@string/for_more_details"
                android:textSize="@dimen/_12sdp" />

            <com.panelManagement.widgets.TextViewPlusBold
                android:id="@+id/tv_invite_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4"
                android:text="@string/click_here"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red_rect_cornered"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:textSize="@dimen/_14sdp"
                android:layout_alignParentBottom="true"
                android:text="@string/invite_your_friends"
                android:textColor="@color/white_gray" />
        </RelativeLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>
