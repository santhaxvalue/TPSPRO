<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_available_survey_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

            <TextView
                android:id="@+id/shimmer_available_survey_count"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/gray_txt"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:background="@color/gray_mid_light"
                tools:text="Avaeeilable surveys - 0" />


            <android.support.v7.widget.CardView
                android:id="@+id/shimmer_overlap_pager"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_below="@+id/shimmer_available_survey_count"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="@color/gray_mid_light"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="@dimen/dp8"
                app:cardElevation="@dimen/dp2"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                           android:layout_marginHorizontal="@dimen/_15sdp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/_14sdp"
                            android:background="@color/gray"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_5sdp"
                            tools:text="Brand Awarness Survey(7628)"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/gray"
                            android:layout_marginBottom="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:background="@drawable/ic_right_check_mark_36dp" />

                            <TextView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_8"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:drawablePadding="@dimen/dp8"
                                android:gravity="center"
                                android:textColor="#E4C572"
                                android:textSize="@dimen/_12sdp" />
                           <!-- android:layout_marginHorizontal="@dimen/_15sdp"-->


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:gravity="center"
                            android:background="@color/gray">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp4"
                                android:gravity="center"
                                android:textColor="@color/gray_txt"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp1"
                            android:layout_marginTop="@dimen/dp4"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:layout_marginBottom="@dimen/dp4"
                            android:background="@color/gray" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/next_arrow_box"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/dp8"
                            android:paddingEnd="@dimen/dp8"
                            android:scaleType="centerInside"
                            android:src="@drawable/next_arrow" />

                    </LinearLayout>

                </FrameLayout>


            </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shimmer_overlap_pager"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/tl_dots_1"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/default_dot" />

        <ImageView
            android:id="@+id/tl_dots_2"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/default_dot" />

        <ImageView
            android:id="@+id/tl_dots_3"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/default_dot" />

    </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/shimmer_survey_slider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:foregroundGravity="bottom"
            app:cardBackgroundColor="@color/gray_mid_light"
            app:cardCornerRadius="@dimen/dp12"
            app:cardElevation="@dimen/dp2"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
<!--                android:background="@color/white"-->

            <ImageButton
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp32"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/dp8"
                android:scaleType="centerInside"
                android:src="@drawable/previous" />

            <android.support.v4.view.ViewPager
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/gray"
                android:layout_weight=".8" />
            <ImageButton
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp32"
                android:layout_gravity="center_vertical"
                android:layout_weight=".1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/dp8"
                android:scaleType="centerInside"
                android:src="@drawable/next_click" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

</RelativeLayout>