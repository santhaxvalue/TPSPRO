<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/dp12"
    android:layout_marginRight="@dimen/dp12"
    android:padding="@dimen/dp8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp4"
    app:cardElevation="@dimen/dp1"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/parentLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:padding="@dimen/dp4">

        <LinearLayout
            android:id="@+id/date_ll1"
            android:layout_width="@dimen/margin_70"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/gray"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/day_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp8"
                android:text="@string/date"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/month_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp8"
                android:text="@string/month"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp1"
            android:layout_toEndOf="@+id/date_ll1"
            android:layout_toRightOf="@+id/date_ll1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp8">

            <com.panelManagement.widgets.TextViewPlusBold
                android:id="@+id/tv_SurveyName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:inputType="textCapWords|textMultiLine"
                android:padding="@dimen/dp1"
                android:text="@string/congratulation_header"
                android:textAlignment="viewStart"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/linear_sublayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp2">

                <com.panelManagement.widgets.TextViewPlus
                    android:id="@+id/tv_earn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/Points_Ticket"
                    android:textColor="@color/aqua"
                    android:textSize="@dimen/sp14" />



            </RelativeLayout>
            <com.panelManagement.widgets.TextViewPlus
                android:id="@+id/tv_serveyID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/txt_earned_point"
                android:textColor="@color/aqua"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>