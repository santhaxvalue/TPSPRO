<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvVideo"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivVideoThump"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_survey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_SurveyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:gravity="center"
                android:singleLine="true"
                android:text="Brand Awarness Survey(7628)"
                android:textColor="@color/gray_txt"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/ic_right_check_mark_36dp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:drawablePadding="@dimen/dp8"
                    android:gravity="center"
                    android:text="@string/txt_points"
                    android:textColor="#E4C572"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_nuember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:drawableStart="@drawable/ic_right_check_mark_36dp"
                android:drawableLeft="@drawable/ic_right_check_mark_36dp"
                android:drawablePadding="@dimen/dp8"
                android:gravity="center"
                android:text="@string/txt_points"
                android:textColor="#E4C572"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp4"
                android:layout_marginLeft="@dimen/dp4"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp4"
                    android:gravity="center"
                    android:textColor="@color/gray_txt"
                    android:textSize="@dimen/_10sdp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/dp4"
                android:background="@color/normal_gray" />

            <ImageButton
                android:id="@+id/next_arrow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/next_arrow_box"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingStart="@dimen/dp8"
                android:paddingEnd="@dimen/dp8"
                android:scaleType="centerInside"
                android:src="@drawable/next_arrow" />

        </LinearLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>