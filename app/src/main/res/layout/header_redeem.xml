<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_generalRewards"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/general_host_height"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@color/pink_light"
        android:orientation="horizontal"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.panelManagement.widgets.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/general_rewards"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/ll_sweepstakes"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/general_host_height"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/aqua_dark"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.panelManagement.widgets.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/sweepstakes"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
