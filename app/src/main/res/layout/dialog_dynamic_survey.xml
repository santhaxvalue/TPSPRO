<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        android:minWidth="300dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

        <ImageView
            android:id="@+id/iv_close_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/dp8"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/iv_close_error">

            <TextView
                android:id="@+id/dynamic_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Weâ€™d love for you to participate in another survey."
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:paddingHorizontal="10dp" />

            <TextView
                android:id="@+id/dynamic_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="Click the link below and get cracking."
                android:textColor="@color/black"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:paddingHorizontal="10dp"/>

                <Button
                    android:id="@+id/btn_participate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_submit_rect"
                    tools:text="Participate"
                    android:paddingHorizontal="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"/>

        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>