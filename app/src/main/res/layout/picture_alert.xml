<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ic_pictur_profile_parent"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/gray_box"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/relative_titlebar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ic_textview_activatepassmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Select Picture"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:background="@drawable/back_focus"
            android:text="Done"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relative_titlebar_header"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/select_id_grey_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/ic_txt_newUsertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo Via Camera"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/camera"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/select_id_grey_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/ic_txt_newUsertxtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo Via Gallery"
            android:textColor="@color/black" />
    </LinearLayout>


</RelativeLayout>
