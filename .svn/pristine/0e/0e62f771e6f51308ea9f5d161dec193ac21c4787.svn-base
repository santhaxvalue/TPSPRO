<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reward_history_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <!-- <include
            android:id="@+id/layout_topView"
            layout="@layout/header_points" />-->

        <ImageView
            android:id="@+id/line_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            android:src="@drawable/saparator_line_horizontal" />

        <TextView
            android:id="@+id/txtNoRewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            android:text="@string/txt_no_rewards"
            android:textSize="@dimen/sp18"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lv_rewardPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line_horizontal"
            android:background="@android:color/white"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/white"
            android:dividerHeight="@dimen/dp2"
            android:listSelector="#00000000"
            android:paddingLeft="@dimen/dp6"
            android:paddingRight="@dimen/dp6"
            android:paddingTop="@dimen/dp2"
            android:smoothScrollbar="true"/>
    </RelativeLayout>

</RelativeLayout>